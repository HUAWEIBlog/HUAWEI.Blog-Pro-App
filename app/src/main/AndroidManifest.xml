<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.huaweiblogplus" android:versionCode="2">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.app.huaweiblogplus.ThisApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.app.huaweiblogplus.ActivityMain" />

        <activity android:name="com.app.huaweiblogplus.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.app.huaweiblogplus.ActivityYouTubePlayer"
            android:theme="@style/AppThemeSetting">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.app.huaweiblogplus.ActivityYouTube" />
        </activity>
        <activity android:name="com.app.huaweiblogplus.ActivityYouTube"
            android:theme="@style/AppThemeSetting">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.app.huaweiblogplus.ActivityMain" />
        </activity>
        <activity android:name="com.app.huaweiblogplus.ActivityDeepLink">
            <!-- handle website links
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" android:host="www.huaweiblog.de" />
            </intent-filter>-->

            <!-- handle app links -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="huaweiblog" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.huaweiblogplus.ActivityPostDetails"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:hardwareAccelerated="true" >
        </activity>
        <activity
            android:name="com.app.huaweiblogplus.ActivityPageDetails"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:hardwareAccelerated="true" />
        <activity android:name="com.app.huaweiblogplus.ActivityCategoryDetails" />
        <activity android:name="com.app.huaweiblogplus.ActivityWebView" />
        <activity android:name="com.app.huaweiblogplus.ActivityCategoryDevicesDetails" />
        <activity android:name="com.app.huaweiblogplus.ActivityCategorySoftwareDetails" />
        <activity android:name="com.app.huaweiblogplus.ActivityCategoryEnterpriseDetails" />
        <activity android:name="com.app.huaweiblogplus.ActivityCategoryPreferences" />
        <activity android:name="com.app.huaweiblogplus.ActivityCategoryTippsDetails" />
        <activity
            android:name="com.app.huaweiblogplus.ActivitySettings"
            android:theme="@style/AppThemeSetting" />
        <activity
            android:name="com.app.huaweiblogplus.ActivitySearch"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name="com.app.huaweiblogplus.ActivitySendComment"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/AppThemeDialog" />
        <activity android:name="com.app.huaweiblogplus.ActivityFullScreenImage"/>

        <!-- Ads activity -->
        <!-- Sample AdMob App ID: ca-app-pub-3940256099942544~3347511713 -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:value="ca-app-pub-3940256099942544~3347511713"
            android:theme="@android:style/Theme.Translucent" />

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true"/>

        <service android:name="com.app.huaweiblogplus.fcm.FcmMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

    </application>

</manifest>